<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:background="@drawable/blue_bg">


        </FrameLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="start"
        android:padding="5dp"
        android:text="@string/enter_6_digit_code"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fpInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="start"
        android:padding="5dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fpEmailBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/poppins_light"
        android:gravity="start"
        android:padding="10dp"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="6">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:contentDescription="@string/verification_code_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:contentDescription="@string/verification_code_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:contentDescription="@string/verification_code_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:contentDescription="@string/verification_code_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:contentDescription="@string/verification_code_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:contentDescription="@string/verification_code_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:minHeight="48dp"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/fpResendCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="12sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <com.fyp.lucapp.Components.ComponentLoader
            android:id="@+id/fpComponentLoader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>


</LinearLayout>
