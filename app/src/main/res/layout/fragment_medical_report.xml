<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp">

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@xml/edit_text"
        android:drawableEnd="@xml/search_foreground"
        android:fontFamily="@font/poppins_light"
        android:hint="@string/search_reports"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="17sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reportRecyclerView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:name="com.fyp.lucapp.ItemFragment"
        android:orientation="vertical"
        app:layoutManager="LinearLayoutManager"
        tools:context=".Fragments.ReportFragment" />
</LinearLayout>

